<h1>Listing feelings</h1>

<table>
  <thead>
    <tr>
      <th>Super category</th>
      <th>category</th>
      <th>Feeling card</th>
      <th>Experience</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @feelings.each do |feeling| %>
      <tr>
        <td style="padding-right:200px"><%= feeling.super_category %></td>
        <td><%= feeling.category %></td>
        <td><%= feeling.feeling_card %></td>
        <td><%= feeling.experience %></td>
        <td><%= feeling.note %></td>
        <td><%= link_to 'Show', feeling %></td>
        <td><%= link_to 'Edit', edit_feeling_path(feeling) %></td>
        <td><%= link_to 'Destroy', feeling, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Feeling', new_feeling_path %>
